<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>People List</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <h2>People Page</h2>
  <a href="/person/new" class="btn">Add New</a>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Age</th>
        <th>Gender</th>
        <th>Mobile</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if (people.length === 0) { %>
        <tr>
          <td colspan="5" style="text-align:center;">No people found.</td>
        </tr>
      <% } else { %>
        <% people.forEach(p => { %>
          <tr>
            <td><%= p.name %></td>
            <td><%= p.age %></td>
            <td><%= p.gender %></td>
            <td><%= p.mobile %></td>
            <td class="actions">
              <a href="/person/<%= p._id %>/edit">Edit</a>
              <a href="/person/<%= p._id %>/delete">Delete</a>
            </td>
          </tr>
        <% }) %>
      <% } %>
    </tbody>
  </table>
</body>
</html>
